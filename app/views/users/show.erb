<% if current_user == @user %>
<form action="/users/<%=@user.id%>" method="get">
	<input type="submit" value="Home Page">
</form>

<% if @updated %>
<h2>Updated!!!</h2>
<% elsif @updated == nil %>
<% elsif @updated == false %>
<h2>Nothing is updated!!!</h2>
<% end %>

<!--<%= @updated if @updated %>-->

<h1>Profile</h1>
<ul>
	<li>Id   : <%= @user.id %></li>
	<li>Name : <%= @user.name %></li>
	<li>Email: <%= @user.email %></li>
</ul>

<form action="/users/<%=@user.id%>/edit" method="get">
	<input type="submit" value="Update">
</form>

<form action="/questions/new" method="get">
	<input type="submit" value="Ask">
</form>

<form action="/questions" method="get">
	<input type="submit" value="Asked Questions">
</form>

<form action="/myquestions" method="get">
	<input type="submit" value="My questions">
</form>

<form method="post" action="/logout">
	<input type="submit" value="Logout">
</form>

<% else %>

<p>you have no permission to see this user details unless this is ur account</p>
<% end %>